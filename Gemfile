source 'https://rubygems.org'

gem 'sinatra'               , '~> 1.4.4'  # Web app
gem 'sinatra-partial'       , '~> 0.4.0'  # Sinatra partials
gem 'sinatra-formhelpers-ng', '~> 1.9.0'  # Sinatra form helpers
gem 'pg'                    , '~> 0.17.1' # Database
gem 'sequel'                , '~> 4.6.0'  # Database toolkit
gem 'sequel_pg'             , '~> 1.6.8', require: 'sequel'  # C adapter
gem 'slim'                  , '~> 2.0.2'  # Templating
gem 'compass'               , '~> 0.12.2' # CSS preprocessor

group :development do
  gem 'rake'   , '~> 10.1.1', require: false # Task runner
  gem 'racksh' , '~> 1.0.0'    # Console for Rack based ruby web applications
  gem 'pry'    , '~> 0.9.12.4' # Debugging
  gem 'pry-doc', '~> 0.5.1'    # show-method
end
