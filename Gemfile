source 'https://rubygems.org'

gem 'sinatra', '>= 1.4'            # Web app
gem 'sinatra-partial'              # Sinatra partials
gem 'sinatra-formhelpers-huii'     # Sinatra form helpers
gem 'sinatra-flash'                # Flash messages
gem 'i18n'                         # Translations
gem 'pg'                           # Database
gem 'sequel'                       # Database toolkit
gem 'sequel_pg', require: 'sequel' # C adapter
gem 'slim'                         # Templating
gem 'compass'                      # CSS preprocessor

group :development do
  gem 'pry'                     # Debugging
  gem 'pry-doc'                 # Debugging
  gem 'rake',    require: false # Task runner
  gem 'rubocop', require: false
end
